---
// Example page demonstrating the NavHeader component integration
import BaseLayout from "../layouts/BaseLayout.astro";
import { HomeDemo } from "../components/ui/nav-header-demo";
---

<BaseLayout title="NavHeader Demo - VitalinQ">
  <!-- The NavHeader will be displayed as a sticky header -->
  <div class="min-h-screen bg-gradient-to-br from-neutral-50 to-white">
    <div class="container mx-auto px-4 py-16">
      <div class="max-w-4xl mx-auto">
        <h1 class="text-4xl font-bold text-center mb-8 text-neutral-900">
          NavHeader Component Demo
        </h1>
        
        <div class="prose prose-neutral max-w-none mb-12">
          <p class="text-lg text-neutral-600 text-center">
            This page demonstrates the animated navigation header component. 
            Hover over the navigation items to see the smooth cursor animation.
          </p>
        </div>

        <!-- Sticky NavHeader Demo -->
        <div class="mb-16">
          <HomeDemo client:load />
        </div>

        <!-- Demo content to show scroll behavior -->
        <div class="space-y-8 mt-24">
          <div class="rounded-2xl bg-white p-8 shadow-lg border border-neutral-200">
            <h2 class="text-2xl font-bold mb-4 text-neutral-900">Features</h2>
            <ul class="space-y-3 text-neutral-700">
