---
import logoVitalinQ from "../assets/images/logos/logo-vitalinq.svg";

const currentYear = new Date().getFullYear();

const navSections = [
  { label: "Como funciona", href: "/#passos" },
  { label: "Confiança", href: "/#confianca" },
  { label: "Áreas terapêuticas", href: "/#areas-terapeuticas" },
  { label: "Segurança", href: "/#seguranca" },
  { label: "Contato", href: "/#contato" },
];

const legalLinks = [
  { label: "Termos de uso", href: "/termos-de-uso" },
  { label: "Política de privacidade", href: "/politica-de-privacidade" },
  { label: "Política de cookies", href: "/politica-de-cookies" },
];
---

<footer
  class="relative bg-[#0a0a0a] py-16 border-t border-white/5"
  role="contentinfo"
>
  <div class="max-w-6xl mx-auto px-6">
    <!-- Grid -->
    <div class="grid gap-12 sm:grid-cols-3">
      <!-- Brand -->
      <div>
        <a href="/" class="inline-block" aria-label="VitalinQ — Página inicial">
          <img src={logoVitalinQ.src} alt="VitalinQ" class="h-12 w-auto opacity-80" />
        </a>
        <p class="mt-4 text-white/40 text-sm font-light max-w-xs">
          Assessoria em importação de medicamentos com orientação clara.
        </p>
      </div>

      <!-- Navigation -->
      <nav aria-label="Navegação do rodapé">
        <p class="text-white/30 text-sm font-light mb-4">Seções</p>
        <ul class="space-y-2">
          {navSections.map((item) => (
            <li>
              <a
                href={item.href}
                class="text-white/50 hover:text-white text-sm font-light transition-colors"
              >
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </nav>

      <!-- Legal + Contact -->
      <div class="space-y-6">
        <!-- Legal -->
        <nav aria-label="Legal">
          <p class="text-white/30 text-sm font-light mb-4">Legal</p>
          <ul class="space-y-2">
            {legalLinks.map((item) => (
              <li>
                <a
                  href={item.href}
                  class="text-white/50 hover:text-white text-sm font-light transition-colors"
                >
                  {item.label}
                </a>
              </li>
            ))}
          </ul>
        </nav>

        <!-- Contact -->
        <div>
          <p class="text-white/30 text-sm font-light mb-3">Contato</p>
          <div class="space-y-1 text-sm">
            <a href="https://wa.me/13024657818" class="text-white/50 hover:text-white block transition-colors">
              +1 (302) 465-7818
            </a>
            <a href="mailto:contact@thevitalinq.com" class="text-white/50 hover:text-white block transition-colors">
              contact@thevitalinq.com
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- Copyright -->
    <div class="mt-12 pt-8 border-t border-white/5">
      <p class="text-white/30 text-xs text-center font-light">
        &copy; {currentYear} VitalinQ. Todos os direitos reservados.
      </p>
    </div>
  </div>
</footer>
