          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" width={24} height={24} stroke-width="1" stroke="currentColor" class="text-black size-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v12m6-6H6" />
          </svg>
        </div>
        <div class="absolute -top-3 -right-3 z-20">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" width={24} height={24} stroke-width="1" stroke="currentColor" class="text-black size-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v12m6-6H6" />
          </svg>
        </div>
        <div class="absolute -bottom-3 -left-3 z-20">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" width={24} height={24} stroke-width="1" stroke="currentColor" class="text-black size-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v12m6-6H6" />
          </svg>
        </div>
        <div class="absolute -bottom-3 -right-3 z-20">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" width={24} height={24} stroke-width="1" stroke="currentColor" class="text-black size-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v12m6-6H6" />
          </svg>
        </div>
        <div class="relative z-10 space-y-3">
          <span class="text-5xl lg:text-6xl font-bold text-[#673de6]">{cardContents[0].number}</span>
          <p class="text-sm font-semibold text-gray-500 uppercase tracking-wider">{cardContents[0].numberLabel}</p>
          <h3 class="text-xl font-bold text-gray-900 pt-2">
            {cardContents[0].title}
          </h3>
          <p class="text-gray-700 text-sm leading-relaxed">{cardContents[0].description}</p>
        </div>
      </div>

      {/* Card 2 - Medium */}
