      {/* Logo bottom-left */}
      <div class="hidden lg:block">
        <img src={logoPreta.src} alt="VitalinQ" class="h-8 w-auto" />
      </div>
      <div class="max-w-2xl text-right">
        <h2 id="trust-heading" class="text-4xl md:text-6xl font-bold text-black mb-4">
