<section
  id="confianca"
  aria-labelledby="trust-heading"
  class="relative py-24 sm:py-32 lg:py-40 overflow-hidden bg-white"
>
  {/* Soft Yellow Glow Background */}
  <div
    class="absolute inset-0 z-0 pointer-events-none"
    style={{
      backgroundImage: `
        radial-gradient(circle at center, #673de6 0%, transparent 70%)
      `,
      opacity: 0.6,
      mixBlendMode: "multiply",
    }}
  />
