---
import SimpleCarousel from "../SimpleCarousel.astro";
import { PHARMACEUTICAL_BRANDS } from "../../types/pharmaceutical-brands";

const kpis = [
  { value: "+5 anos", label: "Atuação internacional" },
  { value: "+2.000", label: "Produtos enviados" },
  { value: "7 dias", label: "Atendimento (8h-19h)" },
  { value: "100%", label: "Taxa de Sucesso" },
];

const paragraphs = [
  "Desde 2019, a VitalinQ conecta o Brasil a fabricantes globais de medicamentos, viabilizando acesso a tratamentos de alta complexidade com segurança e conformidade regulatória.",
  "Com sede nos Estados Unidos, atendemos pacientes, médicos, farmácias, hospitais e instituições.",
];

const logos = PHARMACEUTICAL_BRANDS.map(brand => ({
  name: brand.name,
  svg: brand.svg
}));
---

<section
  id="confianca"
  aria-labelledby="trust-heading"
  class="relative bg-[#0a0a0a] py-24 sm:py-32 lg:py-40 text-white overflow-hidden"
>
  <!-- Minimal background -->
  <div class="absolute inset-0 pointer-events-none">
    <div 
      class="absolute left-0 bottom-0 w-[600px] h-[600px] rounded-full bg-[#673de6]/5 blur-[180px]"
      aria-hidden="true"
    ></div>
  </div>

  <div class="relative z-10 max-w-6xl mx-auto px-6">
    <!-- Header -->
    <div class="text-center mb-16">
      <h2
        id="trust-heading"
        class="text-3xl sm:text-4xl lg:text-5xl font-light tracking-tight"
      >
        Confiança em cada etapa
      </h2>
      <p class="mt-4 text-white/40 font-light max-w-xl mx-auto">
        Importação de medicamentos com segurança, documentação correta e acompanhamento claro.
      </p>
    </div>

    <!-- Who we are + KPIs -->
    <div class="grid gap-12 lg:grid-cols-2 mb-16">
      <!-- Left: Who we are -->
      <div class="space-y-6">
        <div>
          <h3 class="text-white/60 text-sm font-light mb-3">Quem somos</h3>
          <p class="text-white/80 font-light leading-relaxed">
            {paragraphs[0]}
          </p>
        </div>
        <p class="text-white/40 font-light leading-relaxed">
          {paragraphs[1]}
        </p>
      </div>

      <!-- Right: KPIs -->
      <div class="grid grid-cols-2 gap-4">
        {kpis.map((kpi) => (
          <div class="p-6 rounded-2xl bg-white/5 border border-white/5 hover:border-[#673de6]/20 transition-all duration-300">
            <p class="text-2xl font-light text-[#673de6]">
              {kpi.value}
            </p>
            <p class="text-white/40 text-sm mt-2 font-light">
              {kpi.label}
            </p>
          </div>
        ))}
      </div>
    </div>

    <!-- Divider -->
    <div class="border-t border-white/10 mb-16"></div>

    <!-- Brands -->
    <div class="mb-12">
      <h3 class="text-white/40 text-sm font-light mb-8 text-center">
        Referências globais
      </h3>
      <div class="opacity-40">
        <SimpleCarousel logos={logos} />
      </div>
    </div>

    <!-- CTAs -->
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <a
        href="/#contato"
        class="inline-flex items-center justify-center gap-2 px-6 py-3 bg-[#673de6] text-white font-light rounded-full transition-all duration-300 hover:bg-[#5a32d4]"
      >
        Falar com especialista
      </a>
      <a
        href="/#contato"
        class="inline-flex items-center justify-center gap-2 px-6 py-3 border border-white/20 text-white/60 font-light rounded-full transition-all duration-300 hover:border-[#673de6]/50 hover:text-white"
      >
        Entender meu caso
      </a>
    </div>
  </div>
</section>

<style>
  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  section > div > div:nth-child(3) > div > div {
    animation: fade-in-up 0.6s ease-out forwards;
    opacity: 0;
  }

  section > div > div:nth-child(3) > div > div:nth-child(1) { animation-delay: 0ms; }
  section > div > div:nth-child(3) > div > div:nth-child(2) { animation-delay: 100ms; }
  section > div > div:nth-child(3) > div > div:nth-child(3) { animation-delay: 200ms; }
  section > div > div:nth-child(3) > div > div:nth-child(4) { animation-delay: 300ms; }

  @media (prefers-reduced-motion: reduce) {
    section > div > div:nth-child(3) > div > div {
      animation: none;
      opacity: 1;
    }
  }
</style>
