---
import oncologiaImg from "../../assets/images/oncologia.avif";
import escleroseImg from "../../assets/images/esclerose.avif";
import doencasRarasImg from "../../assets/images/doencas-raras.avif";
import imunobiologicosImg from "../../assets/images/imunobiologicos.avif";
import endocrinologiaImg from "../../assets/images/endocrinologia.avif";
import medicoReceitandoImg from "../../assets/images/medico-receitando.avif";

const areas = [
  {
    title: "Oncologia",
    description: "Terapias oncológicas e medicamentos de alto custo.",
    image: oncologiaImg,
  },
  {
    title: "Esclerose múltipla",
    description: "Tratamentos imunomoduladores e acompanhamento orientado.",
    image: escleroseImg,
  },
  {
    title: "Doenças raras",
    description: "Medicamentos órfãos e de difícil acesso.",
    image: doencasRarasImg,
  },
  {
    title: "Imunobiológicos",
    description: "Terapias biológicas e imunossupressoras.",
    image: imunobiologicosImg,
  },
  {
    title: "Endocrinologia",
    description: "Medicamentos especializados conforme prescrição.",
    image: endocrinologiaImg,
  },
  {
    title: "Sob demanda",
    description: "Outras especialidades: avaliamos a prescrição e orientamos.",
    image: medicoReceitandoImg,
  },
];
---

<section
  id="areas-terapeuticas"
  aria-labelledby="areas-heading"
  class="bg-[#0a0a0a] py-24 sm:py-32 lg:py-40"
>
  <div class="max-w-6xl mx-auto px-6">
    <!-- Header -->
    <div class="text-center mb-16">
      <h2
        id="areas-heading"
        class="text-3xl sm:text-4xl lg:text-5xl font-light tracking-tight text-white"
      >
        Áreas terapêuticas
      </h2>
      <p class="mt-4 text-white/40 font-light max-w-xl mx-auto">
        Atendemos medicamentos de alta complexidade e uso especializado.
      </p>
    </div>

    <!-- Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
      {areas.map((area) => (
        <div class="group relative overflow-hidden rounded-2xl bg-white/5 border border-white/5 hover:border-[#673de6]/30 transition-all duration-500">
          {/* Image */}
          {area.image && (
            <div class="relative h-40 overflow-hidden">
              <img
                src={area.image.src}
                alt={area.title}
                class="h-full w-full object-cover opacity-60 group-hover:opacity-80 transition-opacity duration-500"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-[#0a0a0a] to-transparent"></div>
            </div>
          )}
          
          {/* Content */}
          <div class="p-6">
            <h3 class="text-white font-light text-lg mb-2 group-hover:text-[#673de6] transition-colors duration-300">
              {area.title}
            </h3>
            <p class="text-white/40 text-sm font-light">
              {area.description}
            </p>
          </div>
        </div>
      ))}
    </div>

    <!-- CTA -->
    <div class="mt-12 text-center">
      <a
        href="/#contato"
        class="inline-flex items-center gap-2 px-6 py-3 text-white/60 hover:text-white text-sm transition-colors group"
      >
        <span>Falar com especialista</span>
        <span class="group-hover:translate-x-1 transition-transform duration-200">→</span>
      </a>
    </div>
  </div>
</section>

<style>
  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  section > div > div:nth-child(3) > div {
    animation: fade-in-up 0.6s ease-out forwards;
    opacity: 0;
  }

  section > div > div:nth-child(3) > div:nth-child(1) { animation-delay: 0ms; }
  section > div > div:nth-child(3) > div:nth-child(2) { animation-delay: 50ms; }
  section > div > div:nth-child(3) > div:nth-child(3) { animation-delay: 100ms; }
  section > div > div:nth-child(3) > div:nth-child(4) { animation-delay: 150ms; }
  section > div > div:nth-child(3) > div:nth-child(5) { animation-delay: 200ms; }
  section > div > div:nth-child(3) > div:nth-child(6) { animation-delay: 250ms; }

  @media (prefers-reduced-motion: reduce) {
    section > div > div:nth-child(3) > div {
      animation: none;
      opacity: 1;
    }
  }
</style>
