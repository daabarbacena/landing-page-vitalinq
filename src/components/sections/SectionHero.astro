---
import { MEDICAMENTOS_TRIAGEM_OPTIONS } from "../../types/triagem";
import logoVitalinQ from "../../assets/images/logos/logo-vitalinq.svg";

// Filtrar opções ativas e ordená-las
const medicamentosTriagem = MEDICAMENTOS_TRIAGEM_OPTIONS
  .filter((opt) => opt.active !== false)
  .sort((a, b) => (a.order ?? 0) - (b.order ?? 0));

const selectId = "medicamentos-select";
const selectDescId = "medicamentos-description";
---

<section
  id="inicio"
  aria-labelledby="hero-headline"
  class="relative min-h-screen flex items-center justify-center overflow-hidden bg-[#0a0a0a]"
>
  <!-- Minimal background gradient -->
  <div class="absolute inset-0 pointer-events-none">
    <!-- Soft gradient orbs -->
    <div 
      class="absolute top-1/4 left-1/4 w-[500px] h-[500px] rounded-full bg-[#673de6]/8 blur-[120px] animate-pulse-slow"
      aria-hidden="true"
    ></div>
    <div 
      class="absolute bottom-1/4 right-1/4 w-[400px] h-[400px] rounded-full bg-[#673de6]/5 blur-[100px] animate-pulse-slow delay-1000"
      aria-hidden="true"
    ></div>
    
    <!-- Subtle grid pattern -->
    <div class="absolute inset-0 opacity-[0.02]" style="background-image: linear-gradient(rgba(255,255,255,0.1) 1px, transparent 1px), linear-gradient(90deg, rgba(255,255,255,0.1) 1px, transparent 1px); background-size: 60px 60px;"></div>
  </div>

  <!-- Content -->
  <div class="relative z-10 w-full max-w-6xl px-6 py-32">
    <div class="grid gap-16 lg:grid-cols-2 lg:gap-24 items-center">
      <!-- Left Column - Text -->
      <div class="text-center lg:text-left animate-fade-in-up">
        <!-- Logo/Brand minimal -->
        <div class="mb-8 lg:mb-12">
          <img 
            src={logoVitalinQ.src} 
            alt="VitalinQ" 
            class="h-16 w-auto mx-auto lg:mx-0 opacity-90"
          />
        </div>

        <!-- Headline -->
        <h1
          id="hero-headline"
          class="text-4xl sm:text-5xl lg:text-6xl font-light tracking-tight text-white leading-[1.15]"
        >
          Importe seu medicamento de forma <span class="text-[#673de6] font-normal">segura e simples</span>
        </h1>

        <!-- Subheadline - minimal -->
        <p class="mt-6 text-lg sm:text-xl text-white/50 max-w-xl mx-auto lg:mx-0 font-light leading-relaxed">
          Assessoria especializada na importação de medicamentos. Cuidamos de todo o processo para você.
        </p>

        <!-- Trust indicators - minimal dots -->
        <div class="mt-10 flex flex-wrap justify-center lg:justify-start gap-6 text-sm text-white/40">
          <span class="flex items-center gap-2">
            <span class="w-1.5 h-1.5 rounded-full bg-[#673de6]"></span>
            Resposta em 24h
          </span>
          <span class="flex items-center gap-2">
            <span class="w-1.5 h-1.5 rounded-full bg-[#673de6]"></span>
            100% seguro
          </span>
          <span class="flex items-center gap-2">
            <span class="w-1.5 h-1.5 rounded-full bg-[#673de6]"></span>
            Equipe especializada
          </span>
        </div>

        <!-- CTA Button - minimal -->
        <div class="mt-12">
          <a
            id="hero-whatsapp-cta"
            href="https://wa.me/13024657818"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-3 px-8 py-4 bg-[#673de6] text-white font-medium rounded-full transition-all duration-300 hover:bg-[#5a32d4] hover:shadow-[0_0_30px_rgba(103,61,230,0.3)] active:scale-[0.98]"
          >
            <span>Falar com especialista</span>
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        </div>
      </div>

      <!-- Right Column - Select/Card -->
      <div class="animate-fade-in-up delay-200">
        <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-2xl p-8 lg:p-10">
          <!-- Minimal header -->
          <div class="text-center mb-8">
            <h2 class="text-xl font-light text-white">
              Qual medicamento você precisa?
            </h2>
            <p class="mt-2 text-sm text-white/40">
              Selecione para orientarmos melhor
            </p>
          </div>

          <!-- Select -->
          <div class="space-y-4">
            <div>
              <label for={selectId} class="block text-sm font-medium text-white/70 mb-2">
                Tipo de medicamento
              </label>

              <select
                id={selectId}
                name="medicamentos"
                aria-describedby={selectDescId}
                class="w-full bg-white/5 border border-white/10 rounded-xl px-4 py-3.5 text-white placeholder-white/30 transition-all focus:border-[#673de6] focus:outline-none focus:ring-1 focus:ring-[#673de6]/50"
              >
                <option value="" disabled selected class="bg-[#0a0a0a]">
                  Selecione uma opção
                </option>
                {medicamentosTriagem.map((opt) => (
                  <option value={opt.value} class="bg-[#0a0a0a]">{opt.label}</option>
                ))}
              </select>
            </div>

            <p id={selectDescId} class="text-xs text-white/30">
              Atualizado conforme disponibilidade e regulamentação.
            </p>
          </div>

          <!-- Subtle note -->
          <p class="mt-6 text-center text-xs text-white/30">
            ⏱️ Resposta garantida em até 24h
          </p>
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll indicator - minimal -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce-slow">
    <div class="w-6 h-10 rounded-full border border-white/20 flex items-start justify-center p-2">
      <div class="w-1 h-2 bg-white/40 rounded-full animate-scroll-dot"></div>
    </div>
  </div>
</section>

<style>
  @option {
    color-scheme: dark;
  }

  option {
    background-color: #0a0a0a;
    color: white;
  }

  /* Animations */
  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes pulse-slow {
    0%, 100% {
      opacity: 1;
      transform: scale(1);
    }
    50% {
      opacity: 0.8;
      transform: scale(1.05);
    }
  }

  @keyframes scroll-dot {
    0%, 100% {
      transform: translateY(0);
      opacity: 1;
    }
    50% {
      transform: translateY(4px);
      opacity: 0.5;
    }
  }

  @keyframes bounce-slow {
    0%, 100% {
      transform: translateX(-50%) translateY(0);
    }
    50% {
      transform: translateX(-50%) translateY(-8px);
    }
  }

  .animate-fade-in-up {
    animation: fade-in-up 0.8s ease-out forwards;
  }

  .animate-fade-in-up.delay-200 {
    animation-delay: 0.2s;
    opacity: 0;
  }

  .animate-pulse-slow {
    animation: pulse-slow 8s ease-in-out infinite;
  }

  .delay-1000 {
    animation-delay: 1s;
  }

  .animate-scroll-dot {
    animation: scroll-dot 1.5s ease-in-out infinite;
  }

  .animate-bounce-slow {
    animation: bounce-slow 2s ease-in-out infinite;
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .animate-fade-in-up,
    .animate-pulse-slow,
    .animate-scroll-dot,
    .animate-bounce-slow {
      animation: none;
      opacity: 1;
      transform: none;
    }
  }
</style>
